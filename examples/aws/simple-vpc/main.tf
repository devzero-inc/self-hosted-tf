################################################################################
# Providers
################################################################################

provider "aws" {
  region = var.region
}

################################################################################
# Common resources
################################################################################

resource "random_string" "this" {
  length  = 6
  special = false
  upper   = false
}

################################################################################
# VPC
################################################################################

resource "aws_vpc" "this" {
  instance_tenancy = "default"
  cidr_block       = var.cidr

  enable_dns_hostnames = true
  enable_dns_support   = true
}
